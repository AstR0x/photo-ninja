{
  "parser": "babel-eslint",
  "extends": "airbnb-typescript",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "required": {
          "some": [
            "nesting",
            "id"
          ]
        }
      }
    ],
    "jsx-a11y/label-has-for": [
      "error",
      {
        "required": {
          "some": [
            "nesting",
            "id"
          ]
        }
      }
    ],
    "jsx-a11y/no-autofocus": [
      2,
      {
        "ignoreNonDOM": true
      }
    ],
    "react/state-in-constructor": 0,
    "linebreak-style": 0,
    "arrow-parens": 0
  }
}